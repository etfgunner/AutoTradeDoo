@model IEnumerable<AutoTradeDoo.Models.Automobil>

@{
    ViewBag.Title = "Pregled Asortimana";
}
<br /><br /><br />
<p>
    @Html.ActionLink("Dodaj novi automobil", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Slika automobila")
        </th>
        <th>
            @Html.DisplayName("Proizvođač")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayName("Godište")
        </th>
        <th>
            @Html.DisplayName("Kilometraža")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gorivo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @{
               var base64 = Convert.ToBase64String(item.Image);
               var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }

        <img src="@imgSrc" width="240" height="180"/> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proizvodjac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Godiste)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kilometraza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gorivo)
        </td>
        <td>
            @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
             @Html.ActionLink("Izmjeni", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
