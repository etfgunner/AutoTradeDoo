@model AutoTradeDoo.Models.Novost

@{
    ViewBag.Title = "Dodaj novost";
}


@using (Html.BeginForm("Create", "Novost", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Novost</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Dodajte fotografiju", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })<br />
                Dodaj fotografiju: <input type="file" name="test" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Sadržaj", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              @Html.TextAreaFor(model => model.Sadrzaj, new { style = "width: 420px; height: 100px;", placeholder = "Unesite novost" })
                @Html.ValidationMessageFor(model => model.Sadrzaj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
